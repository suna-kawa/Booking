<div class="text-3xl pb-5 font-sans">予約済み一覧</div>
<div class="relative overflow-x-auto">
<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mb-10">
<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
  <tr>
    <th scope="col" class="px-6 py-3">ホテル画像</th>
    <th scope="col" class="px-6 py-3">ホテル名</th>
    <th scope="col" class="px-6 py-3">ホテル紹介</th>
    <th scope="col" class="px-6 py-3">合計料金</th>
    <th scope="col" class="px-6 py-3">チェックイン</th>
    <th scope="col" class="px-6 py-3">チェックアウト</th>
    <th scope="col" class="px-6 py-3">予約確定日</th>
  </tr>
</thead>
<tbody>
  <% @reservation_rooms.each do |reservation_room| %>
  <% @reservations.each do |reservation| %>

  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
    <td class="px-6 py-4"><% if reservation_room.hotel_image? %>
    <%= image_tag reservation_room.class.hotel_image.url, size: '200x200' %>
    <% else %>
    <%= image_tag ("room_default.jpg"), size: '200x200'%>
    <% end %>
    </td>
    <td class="px-6 py-4"><%= link_to reservation_room.hotel_name, room_path(reservation_room), class: 'text-cyan-400'  %></td>
    <td class="px-6 py-4 text-gray-100"><%= reservation_room.hotel_introduction %></td>
    <td class="px-6 py-4 text-gray-100"><p>￥<%= (reservation.check_in - reservation.check_out).to_i.abs * reservation.guest * reservation_room.price %>円</p></td>
    <td class="px-6 py-4 text-gray-100"><%= reservation.check_in.strftime("%Y/%m/%d") %></td>
    <td class="px-6 py-4 text-gray-100"><%= reservation.check_out.strftime("%Y/%m/%d") %></td>
    <td class="px-6 py-4 text-gray-100"><%= reservation.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
  <% end %>
<% end %>
</tbody>
</table>


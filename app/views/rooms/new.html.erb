<div class="pt-10 pb-40 text-center p-8 rounded border border-gray-200">
<h1 class="font-medium text-3xl">新規登録</h1>
<%= form_with model: @room, local: true, class: "mt-8" do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :hotel_name, "ホテル名", class: "text-sm text-gray-700 block mb-1 font-medium" %>
  <%= f.text_field :hotel_name, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "ホテル名を入力" %>

  <%= f.label :hotel_introduction, "ホテル詳細", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.text_area :hotel_introduction, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", size: "20x10", placeholder: "ホテル詳細を入力" %>

  <%= f.label :price, "料金", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.number_field :price, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto field-control", placeholder: "1日あたりの料金を入力" %>

  <%= f.label :address, "住所", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.text_field :address, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "住所を入力" %>

  <%= f.label :hotel_image, "ホテル画像", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.file_field :hotel_image, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto" %>

  <div class="actions space-x-4 mt-8">
  <%= f.submit "保存", class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %>
  <%= link_to "キャンセル", :back, class: "py-2 px-4 bg-white border border-gray-200 text-gray-600 rounded hover:bg-gray-100 active:bg-gray-200 disabled:opacity-50" %>
  </div>
<% end %>
</div>

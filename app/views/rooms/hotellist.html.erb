<%= search_form_for @q, url: hotellist_rooms_path(@q), class: 'justify-items-stretch bg-slate-400 pb-5 text-center pt-5'  do |f| %>
  <%= f.text_field :address_cont, placeholder: "エリア名を入力", class: 'mr-5' %>
  <%= f.text_field :hotel_name_or_hotel_introduction_cont, placeholder: "キーワード名を入力" %>
  <%= f.submit "検索", class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700 cursor-pointer" %>
<% end %>
<p class="text-blue-500">検索結果<%= @rooms.count %>件が見つかりました</p>
<% if @rooms.present? %>
<% @rooms.each do |room| %>
<section class="text-gray-600 body-font m-auto">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
    <% if room.hotel_image? %>
    <%= image_tag room.hotel_image.url, class: "object-cover object-center rounded", size: '100x100' %>
    <% else %>
    <%= image_tag ("room_default.jpg"), class: "object-cover object-center rounded", size: '600x600'  %>
    <% end %>
  </div>
  <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center bg-slate-50">
    <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">ホテル名：<%= room.hotel_name %></h1>
    <p class="mb-8 leading-relaxed">ホテル紹介：<%= room.hotel_introduction %></p>
    <p class="mb-8 leading-relaxed">住所：<%= room.address %></p>
    <p class="mb-8 leading-relaxed">￥ <%= room.price %></p>
    <p class="mb-8 leading-relaxed"><%= link_to '詳細はこちら', room_path(room), class: 'text-blue-700'  %></p>
    <div class="flex w-full md:justify-start justify-center items-end">
  <div class="relative mr-4 lg:w-full xl:w-1/2 w-2/4">
    </div>
    </div>
    </div>
    </div>
    </div>
</section>
  <% end %>
<% else %>
<p class="text-blue-500">検索結果は見つかりませんでした</p>
<% end %>




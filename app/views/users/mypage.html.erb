<%= render 'shared/account_menu' %>
<div class="pt-10 pb-40 text-center p-8 rounded border border-gray-200">
<h1 class="font-medium text-3xl">プロフィール編集</h1>
<%= form_with model: @user, local: true, class: "mt-8" do |f| %>
  <%= f.label :name, "名前", class: "text-sm text-gray-700 block mb-1 font-medium" %>
  <%= f.text_field :name, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto" %>

  <%= f.label :image, "アイコン画像", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.file_field :image, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto" %>

  <%= f.label :introduction, "自己紹介", class: "text-sm text-gray-700 block mb-1 font-medium pt-5" %>
  <%= f.text_area :introduction, class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", size: "20x10" %>

  <div class="actions space-x-4 mt-8">
  <%= f.submit "保存", class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %>
  <%= link_to "キャンセル", :back, class: "py-2 px-4 bg-white border border-gray-200 text-gray-600 rounded hover:bg-gray-100 active:bg-gray-200 disabled:opacity-50" %>
  </div>
<% end %>
</div>

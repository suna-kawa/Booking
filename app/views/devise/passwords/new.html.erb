<div class="pt-10 text-center p-8 ">
<h1 class="font-medium text-3xl">パスワードをお忘れですか？</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'メールアドレス', class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "メールアドレス" %>
  </div>

  <div class="actions pb-40">
    <%= f.submit "送信する", class: "mb-5 py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %><br />
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>

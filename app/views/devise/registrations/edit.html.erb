<%= render 'shared/account_menu' %>

<div class="pt-10 pb-40 text-center p-8 rounded border border-gray-200">
<h1 class="font-medium text-3xl">アカウント編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field pt-5">
    <%= f.label :password, "変更後のパスワード(変更しない場合は、空白にして下さい)", class: "text-sm text-gray-700 block mb-1 font-medium"  %> 
    <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "新しいパスワード" %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> 文字が最小文字数です</em>
    <% end %>
  </div>

  <div class="field pt-5">
    <%= f.label :password_confirmation, "確認用パスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "確認用パスワード" %>
  </div>

  <div class="field pt-5">
    <%= f.label :current_password, "現在のパスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "現在のパスワード" %>
  </div>

  <div class="actions space-x-4 mt-8">
    <%= f.submit "保存", class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %>
    <%= link_to "戻る", :back, class: "py-2 px-4 bg-white border border-gray-200 text-gray-600 rounded hover:bg-gray-100 active:bg-gray-200 disabled:opacity-50" %>
    </div>
<% end %>
</div>

    <li class="mr-2 click-color">
    <%= link_to users_account_path, data: {"turbolinks" => false}, class: "inline-flex p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" do %>
    <svg aria-hidden="true" class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path></svg><%= 'アカウント' %>
    <% end %>
    </li>
    <li class="mr-2 click-color">
    <%= link_to users_profile_path, data: {"turbolinks" => false}, class: "inline-flex p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" do %>
    <svg aria-hidden="true" class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path></svg><%= 'プロフィール' %>
    <% end %>
    </li>
    <li class="mr-2 click-color">
    <%= link_to edit_user_registration_path, data: {"turbolinks" => false}, class: "inline-flex p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" do %>
    <svg aria-hidden="true" class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z"></path></svg><%= 'アカウント編集' %>
    <% end %>
    </li>
    <li class="mr-2 click-color">
    <%= link_to users_mypage_path, data: {"turbolinks" => false}, class: "inline-flex p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" do %>
    <svg aria-hidden="true" class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z"></path></svg><%= 'プロフィール編集' %>
    <% end %>
    </li>
  </ul>
</div>
<%# アカウント編集 %>
<div class="pt-10 pb-40 text-center p-8 rounded border border-gray-200">
<h1 class="font-medium text-3xl">アカウント編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field pt-5">
    <%= f.label :password, "変更後のパスワード(変更しない場合は、空白にして下さい)", class: "text-sm text-gray-700 block mb-1 font-medium"  %> 
    <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "新しいパスワード" %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> 文字が最小文字数です</em>
    <% end %>
  </div>

  <div class="field pt-5">
    <%= f.label :password_confirmation, "確認用パスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "確認用パスワード" %>
  </div>

  <div class="field pt-5">
    <%= f.label :current_password, "現在のパスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "現在のパスワード" %>
  </div>

  <div class="actions space-x-4 mt-8">
    <%= f.submit "保存", class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %>
    <%= link_to "戻る", :back, class: "py-2 px-4 bg-white border border-gray-200 text-gray-600 rounded hover:bg-gray-100 active:bg-gray-200 disabled:opacity-50" %>
    </div>
<% end %>
</div>

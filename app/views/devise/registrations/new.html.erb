<div class="pt-10 text-center p-8">
<h1 class="font-medium text-3xl">新規登録<h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名", class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "名前" %>
  </div>
  <div class="field pt-5">
    <%= f.label :email, "メールアドレス", class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "メールアドレス" %>
  </div>

  <div class="field pt-5">
    <%= f.label :password, "パスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字が最小文字数です)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "パスワード" %>
  </div>

  <div class="field pt-5">
    <%= f.label :password_confirmation, "確認用パスワード", class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "確認用パスワード" %>
  </div>

  <div class="pb-40 actions space-x-4 mt-8 text-center">
    <%= f.submit "アカウント作成", class: "mb-5 py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %><br />
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>

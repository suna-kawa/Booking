<div class="pt-10 text-center p-8 ">
<h1 class="font-medium text-3xl">ログイン</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス",  class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "メールアドレス" %>
  </div>

  <div class="field pt-5">
    <%= f.label :password, "パスワード",  class: "text-sm text-gray-700 block mb-1 font-medium" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-100 border border-gray-200 rounded py-1 px-3 block focus:ring-blue-500 focus:border-blue-500 text-gray-700 w-96 m-auto", placeholder: "パスワード" %>
  </div>

<div class="pb-40 actions space-x-4 mt-8 text-center">
  <% if devise_mapping.rememberable? %>
    <div class="field pb-5">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, 'ログイン状態を保持する' %><br />
    </div>

  <% end %>
    <%= f.submit "ログイン", class: "mb-5 py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 active:bg-blue-700 disabled:opacity-50 cursor-pointer" %><br />
    <%= render "devise/shared/links" %>
  </div>
</div>  
<% end %>

